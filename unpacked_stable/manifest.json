{
   "action": {
      "default_icon": "/images/icon.png",
      "default_title": "Netflixy • نتفلكسي"
   },
   "background": {
      "service_worker": "background.js"
   },
   "declarative_net_request": {
      "rule_resources": [ {
         "enabled": true,
         "id": "ruleset",
         "path": "rules.json"
      } ]
   },
   "description": "Profitez d’une meilleure expérience NETFLIX",
   "host_permissions": [ "https://*.facebook.com/*", "https://*.netflix.com/*" ],
   "icons": {
      "128": "/images/icon.png",
      "16": "/images/icon.png",
      "32": "/images/icon.png",
      "48": "/images/icon.png"
   },
   "manifest_version": 3,
   "name": "Netflixy • نتفلكسي",
   "permissions": [ "cookies", "storage", "tabs", "declarativeNetRequest" ],
   "update_url": "https://clients2.google.com/service/update2/crx",
   "version": "1.2.8"
}
